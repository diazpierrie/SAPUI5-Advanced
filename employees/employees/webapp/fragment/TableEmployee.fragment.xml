<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel id="_IDGenPanel1">
        <Button id="btnShowCity" text="{i18n>btnShowCity}" press="onShowCity" visible="{config>/visibleBtnShowCity}" />
        <Button id="btnHideCity" text="{i18n>btnHideCity}" press="onHideCity" visible="{config>/visibleBtnHideCity}" />

        <Table id="tableEmployee" items="{employees>/Employees}">
            <columns>
                <Column id="_IDGenColumn1" visible="{config>/visibleID}">
                    <header>
                        <Label id="_IDGenLabel1" text="{i18n>tableId}" />
                    </header>
                </Column>
                <Column id="_IDGenColumn2" visible="{config>/visibleName}">
                    <header>
                        <Label id="_IDGenLabel2" text="{i18n>tableName}" />
                    </header>
                </Column>
                <Column id="_IDGenColumn3" visible="{config>/visibleCountry}">
                    <header>
                        <Label id="_IDGenLabel3" text="{i18n>tableCountry}" />
                    </header>
                </Column>
                <Column id="_IDGenColumn4" visible="{config>/visibleCity}">
                    <header>
                        <Label id="_IDGenLabel4" text="{i18n>tableCity}" />
                    </header>
                </Column>
                <Column id="_IDGenColumn5" width="100px">
                    <header>
                        <Label id="_IDGenLabelAlgo" text="{i18n>tableShowDetails}" />
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press="showEmployee">
                    <cells>
                        <Label id="_IDGenLabel5" text="{employees>EmployeeID}" />
                        <Label id="_IDGenLabel6" text="{employees>LastName}, {employees>FirstName}" />
                        <Label id="_IDGenLabel7" text="{employees>Country}" />
                        <Label id="_IDGenLabel8" text="{employees>City}" />
                        <core:Icon id="_IDGenIcon1" src="sap-icon://show" press="showOrders"></core:Icon>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <HBox id="ordersTable" />
    </Panel>
</core:FragmentDefinition>
