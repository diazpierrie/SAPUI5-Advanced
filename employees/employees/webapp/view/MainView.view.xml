<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox id="hbox">
                <Label id="label" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin" />
                <Input id="inputEmployee" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                <Label id="labelCountry" text="{i18n>labelCountry}" labelFor="slCountry" class="sapUiSmallMargin" visible="false"/>
                <Select id="slCountry" forceSelection="false" visible="false">
                    <items>
                        <core:Item id="_IDGenItem1" key="US" text="{i18n>countryUS}"/>
                        <core:Item id="_IDGenItem2" key="UK" text="{i18n>countryUK}"/>
                        <core:Item id="_IDGenItem3" key="ES" text="{i18n>countryES}"/>
                    </items>
                </Select>

            </HBox>
        </content>
    </Page>
</mvc:View>
