<mvc:View controllerName="logaligroup.employees.controller.EmployeeDetails"
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Page id="_IDGenPage1" title="{i18n>employeeDetails}">
    <Panel id="_IDGenPanel1">
      <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
        <items>
          <Text id="_IDGenText1" text="{employees>LastName}, {employees>FirstName}" class="boldText"/>
        </items>
      </FlexBox>
      <FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
        <items>
          <VBox id="_IDGenVBox1">
            <Text id="_IDGenText2" text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
            <Text id="_IDGenText3" text="{employees>EmployeeID}"/>
          </VBox>
          <VBox id="_IDGenVBox2">
            <Text id="_IDGenText4" text="{i18n>titleEmployee}" class="boldText sapUiTinyMarginEnd"/>
            <Text id="_IDGenText5" text="{employees>Title}"/>
          </VBox>
        </items>
      </FlexBox>
      <FlexBox id="_IDGenFlexBox3" height="65px" alignItems="Start" justifyContent="SpaceBetween">
        <items>
          <HBox id="_IDGenHBox1">
            <Text id="_IDGenText6" text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
            <Text id="_IDGenText7" text="{employees>Country}"/>
            <layoutData>
              <FlexItemData id="_IDGenFlexItemData1" growFactor="3"></FlexItemData>
            </layoutData>
          </HBox>
          <HBox id="_IDGenFlexBox4" direction="Row" alignItems="Start">
            <Text id="_IDGenText8" text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
            <Text id="_IDGenText9" text="{employees>City}"/>
            <layoutData>
              <FlexItemData id="_IDGenFlexItemData2" growFactor="3"></FlexItemData>
            </layoutData>
          </HBox>
          <HBox id="_IDGenHBox2" direction="Row" alignItems="Start">
            <Text id="_IDGenText10" text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
            <Text id="_IDGenText11" text="{employees>PostalCode}"/>
            <layoutData>
              <FlexItemData id="_IDGenFlexItemData3" growFactor="1"></FlexItemData>
            </layoutData>
          </HBox>
        </items>
      </FlexBox>
    </Panel>

    <Panel id="_IDGenPanel3" class="sapUiSizeCompact" backgroundDesign="Transparent">    
    <headerToolbar>
      <Toolbar id="_IDGenToolbar2" >
        <Title id="_IDGenTitle1" text="{i18n>incidence} {= ${employees>Country} !== 'US' ? ${i18n>europe} : ${i18n>us} }"></Title>
        <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
        <Button id="_IDGenButton1" text="{i18n>createIncidence}" press="onCreateIncidence"></Button>
      </Toolbar>
    </headerToolbar>
    </Panel>
    <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent" >
    
    </Panel>

  </Page>
</mvc:View>
